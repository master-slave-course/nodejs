generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_DATABASE_URL")
}

model Item {
  id         Int      @id @default(autoincrement())
  name       String
  price      Int
  stock      Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
